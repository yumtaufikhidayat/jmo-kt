<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JMO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/matte_green_light</item>
    </style>

    <style name="Theme.JMO" parent="Base.Theme.JMO" />
    <!--Bottom navigation view-->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="colorPrimary">@color/matte_green_darker</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="colorPrimary">@color/matte_green_darker</item>
        <item name="colorPrimaryDark">@color/matte_green_darker</item>
        <item name="colorAccent">@color/matte_green_dark</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner" parent="">
        <item name="cornerSize">5%</item>
    </style>
</resources>